{
  "name": "smarthome-api",
  "version": "2.3.1",
  "main": "build/server.js",
  "scripts": {
    "prestart": "npm run build",
    "start": "node build/server.js",
    "build": "npm run lint && tsc",
    "dev": "npm run build && NODE_ENV=development node build/server.js",
    "dev:watch": "npm run build -- --watch & NODE_ENV=development nodemon build/server.js",
    "docker:generate": "docker build -t $(node -pe \"require('./package.json').name.concat(':').concat(require('./package.json').version)\") .",
    "lint": "eslint ./server --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "tag": "TAG=v$(node -pe \"require('./package.json').version\"); git commit -am \"ðŸ”– $TAG\" && git tag $TAG && git push && git push --tags",
    "test": "jest",
    "test:coverage": "npm t -- --coverage",
    "test:create-db": "bash db/mongo/create-db.sh"
  },
  "author": "Ulises Santana <ulisesantana@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "dotenv": "8.2.0",
    "fastify": "3.9.2",
    "fastify-autoload": "3.4.0",
    "fastify-cors": "5.2.0",
    "fastify-plugin": "3.0.0",
    "fastify-static": "3.3.0",
    "fastify-swagger": "3.5.0",
    "fluent-json-schema": "2.0.3",
    "request": "2.88.2",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/jest": "26.0.22",
    "@types/mongodb": "3.6.10",
    "@types/node": "14.14.16",
    "@types/request": "2.48.5",
    "@types/uuid": "8.3.0",
    "@typescript-eslint/eslint-plugin": "4.20.0",
    "@typescript-eslint/parser": "4.20.0",
    "eslint": "7.23.0",
    "eslint-config-standard": "16.0.2",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.3.1",
    "jest": "26.6.3",
    "nodemon": "2.0.6",
    "pino-pretty": "4.3.0",
    "ts-essentials": "7.0.1",
    "ts-jest": "26.5.4",
    "typescript": "3.9.7"
  },
  "keywords": [],
  "description": ""
}
